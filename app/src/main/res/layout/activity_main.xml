<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF4E0"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_y="451dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_x="0dp">
        <ImageButton
            android:id="@+id/reset_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@layout/button_pressed"
            android:layout_gravity="center"/>
    </FrameLayout>

    <ImageView
        android:src="@drawable/upblue"
        android:layout_width="409dp"
        android:layout_height="271dp"
        android:layout_x="-13dp"
        android:layout_y="-11dp" />
    <ImageView
        android:src="@drawable/tree"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_x="-25dp"
        android:layout_y="122dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_x="-1dp"
        android:layout_y="510dp">
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="146dp"
            android:layout_y="516dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"
        android:layout_x="92dp"
        android:layout_y="11202dp" />

    <TextView
        android:id="@+id/step_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_y="369dp"
        android:layout_x="-2dp"
        android:textSize="150px"
        android:textScaleX="1.5"
        android:text="12"
        android:gravity="center"
        android:layout_gravity="left"
        android:typeface="sans"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_x="0dp"
        android:orientation="horizontal"
        android:layout_y="92dp">
        <ImageView
            android:id="@+id/anim_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/anim_up"
        android:src="@drawable/up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="136dp"
        android:layout_y="288dp" />


</AbsoluteLayout>
